#include "stm32l476xx.h"

// create a led delay. Just a rough estimate
// for one second delay
#define LEDDELAY    1000000

/*************************************************
* function declarations
*************************************************/
int main(void);

int main(void)
{
	int a=0;
	// Enable GPIOA Peripheral Clock (bit 0 in AHB2ENR register)
	RCC->AHB2ENR = 0x00000002;  //enable clock for port B

	// Make GPIOA Pin5 as output pin (bits 1:0 in MODER register)
	GPIOB->MODER &= 0xFFFF3FFF;		// Clear bits 15, 14 for P7
	GPIOB->MODER |= 0x00004000;		// Write 01 to bits 15, 14 for P7

	// Set GPIOA Pin7 to 1 (bit 7 in ODR register)
	GPIOB->ODR |= 0x0080;			// write 1 to pin 7

	while(1)
	{
		GPIOB->ODR |= 0x0080;  //write 1 to pin7
		while(a<LEDDELAY){
			a=a+1;
		}
		a=0;
		GPIOB->ODR &= 0x0000;  //write 0 to pin7
		
		while(a<LEDDELAY){
			a=a+1;
		}
		a=0;
	}

	__asm__("NOP"); // Assembly inline can be used if needed
	return 0;
}
